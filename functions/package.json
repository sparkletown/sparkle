{
  "name": "@sparkletown/sparkle-functions",
  "description": "Cloud Functions for Firebase",
  "scripts": {
    "lint": "prettier --write \"./src/**/*.{js,jsx,ts,tsx,json,css,scss,md}\" && eslint --ext .js,.ts src/",
    "ncu:check": "npx npm-check-updates",
    "npm:save-audit": "npm audit > npm-audit.result.txt",
    "npm:generate-lockfile": "npm i --legacy-peer-deps --package-lock-only",
    "npm:install": "npm install --legacy-peer-deps",
    "npm:invalidate-cache": "npm cache clear --force",
    "build": "tsc",
    "serve": "npm run build && firebase emulators:start --only functions",
    "shell": "npm run build && firebase functions:shell",
    "start": "npm run shell",
    "deploy": "firebase deploy --only functions",
    "logs": "firebase functions:log"
  },
  "engines": {
    "node": "16"
  },
  "main": "lib/index.js",
  "dependencies": {
    "agora-access-token": "^2.0.4",
    "date-fns": "^2.28.0",
    "firebase-admin": "^10.0.1",
    "firebase-functions": "^3.16.0",
    "lodash": "^4.17.21",
    "simple-oauth2": "^4.3.0",
    "twilio": "^3.72.0",
    "uuidv4": "^6.2.12",
    "yup": "^0.32.11"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.10.0",
    "@typescript-eslint/parser": "^5.10.0",
    "eslint": "^8.5.0",
    "eslint-plugin-promise": "^6.0.0",
    "firebase-functions-test": "^0.2.0",
    "firebase-tools": "^9.6.1",
    "node-fetch": "^2.6.7",
    "npm-check-updates": "^12.0.5",
    "prettier": "^2.5.1",
    "typescript": "^4.5.4"
  },
  "private": true
}
