{
  "compilerOptions": {
    "target": "es2017",
    "allowJs": true, //TODO: make it false when all files are .ts
    "noImplicitAny": true,
    "lib": ["dom", "dom.iterable", "esnext"],
    "skipLibCheck": true,

    "esModuleInterop": false, //TODO: make it true when all files are .ts

    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "commonjs", //TODO: make it "esnext" when all files are .ts
    "moduleResolution": "node",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "lib",
    "sourceMap": true,
    "noFallthroughCasesInSwitch": true,
    "downlevelIteration": true,
    "baseUrl": "."
  },
  "compileOnSave": true,
  "include": ["src", "./*.ts"]
}
